package com.ofss.repository;

import com.ofss.model.KycVerification;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface KycVerificationRepository extends JpaRepository<KycVerification, Long> {
    List<KycVerification> findByKycIdOrderByVerificationDateAsc(Long kycId);
    List<KycVerification> findByKycIdOrderByVerificationDateDesc(Long kycId);
    List<KycVerification> findByCustomerIdOrderByVerificationDateDesc(Long customerId);
    
}
